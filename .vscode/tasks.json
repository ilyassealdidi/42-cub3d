{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
				"-fsanitize=address",
				"-I",
				"include",
				"-I",
				"lib/libft",
				"-I",
				"lib/MLX42/include/MLX42",
				"lib/libft/*.c",
				"-framework",
				"Cocoa",
				"-framework",
				"OpenGL",
				"-framework",
				"IOKit",
				"-lglfw3",
				"-L/Users/ialdidi/.brew/opt/glfw/lib/",
				"lib/MLX42/build/libmlx42.a",
                "src/*.c",
                "src/**/*.c",
                "-o",
                "cub3D_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}